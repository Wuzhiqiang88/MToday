.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
}

.constellation {
  height: 1040rpx;
  width: 100%;
  border-radius: 20rpx;
  color: #fff;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  box-sizing: border-box;
  background-size: cover;
  background-color: #000;
}
.name{
  margin-left: 50rpx;
  margin-top: 60rpx;
  font-size: 58rpx;
}
.index {
  margin-top: 40rpx;
  margin-left: 50rpx;
  color: #fff;
  font-size: 32rpx;
}

.allindex {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row; /*横向*/
}

.allindex progress {
  margin-left: 30rpx;
  width: 60%;
}
.txt{
  margin-top: 20rpx;
  margin-left: 50rpx;
  display: flex;
  flex-direction: row; /*横向*/
  font-size: 32rpx;
}
.val{
  margin-left: 30rpx;
  font-size: 38rpx;
  
}