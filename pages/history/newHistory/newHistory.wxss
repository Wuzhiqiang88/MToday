/* pages/history/newHistory/newHistory.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 11pt;
}

.title {
  width: 90%;
  height: 50rpx;
  margin-top: 30rpx;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
  font-size: 12pt;
  font-weight: bold;
}

.placeholder {
  font-weight: normal;
}

.content {
  height: 200rpx;
  width: 90%;
  margin-top: 15rpx;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
}

.weui-btn {
  margin-top: 80rpx;
  color: #fff;
  background-color: #118fff;
  width: 90%;
}

.allpic {
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 1rpx;
}

.img {
  width: 161rpx;
  height: 161rpx;
  padding-left: 4rpx;
  padding-right: 4rpx;
  margin-bottom: -1rpx;
}
.imgalist{
  
  position: relative;
}
.icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  z-index: 999;
  top: 4rpx;
  right: 8rpx;
  opacity: 0.6;
}

.location {
  width: 90%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}
.location view{
  margin-top: 2rpx;
  margin-left: 15rpx;
  font-size: 8pt;
  color: white;
  background-color: gray;
  padding-left: 20rpx;
  padding-right: 40rpx;
  border-radius: 30rpx;
  position: relative;
}
.iconlocation {
  width: 40rpx;
  height: 40rpx;
}

.dellocation{
  position: absolute;
  right: 8rpx;
  top:  10rpx;
  width: 22rpx;
  height: 22rpx;
}