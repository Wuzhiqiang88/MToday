/* pages/weather/weather.wxss */

.container {
 height: 100%;
 width: 100%;
 display: flex;
 flex-direction: column;
 align-items: center;
 padding: 20rpx 25rpx;
 box-sizing: border-box;
} 
.weather{
 height: 250rpx;
 width: 100%;
 margin-bottom: 10rpx;
 border-radius: 20rpx;
 color: #FFF;
 padding: 20rpx 20rpx;
 display: flex;
 font-size: 30rpx;
 box-sizing: border-box;
}
.weather>view{
 flex: 1;
}
.weather>view>view{
 margin: 5px 0;
}
.today{
 background-color: #30BCAF;
}
.tomorrow{
 background-color: #78A4be;
}
.aftertomorrow{
 background-color: #FCB654;
}
.location,.cond_txt{
 font-size: 30rpx;
}
.date,.tmp{
 font-weight: bold;
}
.weather_icon{
 text-align: center;
 height: 65px;
}
.weather_icon image{
 width: 75px;
 height: 100%;
}
.lastUpdateDate{
 font-size: 30rpx;
 text-align: center;
 width: 600rpx;
}
