/* pages/history/index/index.wxss */
@import "/pages/template/template.wxss";
page, .page, .page__bd {
  height: 100%;
  position: relative;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.weui-navbar__item.weui-bar__item_on {
  color: #118fff;
}

.weui-navbar__slider {
  width: 4em;
  background-color: #118fff;
}

.weui-navbar__item {
  padding: 0;
  margin-top: 25rpx;
  margin-bottom: 12rpx;
}

.weui-navbar__title {
  display: inline;
}

.weui-tab__panel {
  padding-top: 60rpx;
}

.weui-navbar {
  background-color: #f5f5f5;
}

.timeline {
  margin-left: 165rpx;
  border-left: 6rpx solid #118fff;
}

.history {
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
}
.start {
  transform: translateX(-28rpx);
  width: 50rpx;
  height: 50rpx;
  background-color: #f8f8f8;
}

.title {
  color: #118fff;
  font-weight: bold;
  line-height: 55rpx;
  font-size: 30rpx;
}

.weui-loadmore__tips_in-line {
  background-color: #f8f8f8;
}
.weui-loadmore_line{
  margin-top: 200rpx;
}
scroll-view{
  width: 100%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.new{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  z-index: 999;
  width: 65rpx;
  height: 65rpx;
}
