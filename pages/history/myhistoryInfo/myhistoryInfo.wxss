/* pages/history/myhistoryInfo/myhistoryInfo.wxss */

.container {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.div {
  width: 80%;
  background-color: white;
  margin-top: 30rpx;
  padding: 40rpx;
  padding-top: 15rpx;
  min-height: 980rpx;
  border-radius: 20rpx;
  box-shadow: 1px 1px 8px hsla(0, 0%, 0%, 0.3);
}

.delhistory {
  width: 100%;
  display: flex;
  align-items: flex-end;
  flex-direction: column;
}
.delhistory image{
  width: 36rpx;
  height: 36rpx;
}
.header {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  
}

.right {
  width: 100%;
  display: flex;
  align-items: flex-end;
  flex-direction: column;
  font-size: 10pt;
}

.left {
  font-size: 25pt;
  font-weight: bold;
}

.date {
  display: flex;
  flex-direction: row;
}

.day {
  font-size: 18pt;
  font-weight: bold;
  margin-right: 10rpx;
}

.month {
  margin-top: 5rpx;
}

.time {
  color: #8a8a8a;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.time image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  margin-top: 5rpx;
}

.location {
  color: #8a8a8a;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid gainsboro;
}

.location image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 8rpx;
  margin-top: 3rpx;
}

.title {
  margin-top: 50rpx;
  font-size: 14pt;
  font-weight: bold;
}

.content {
  margin-top: 30rpx;
  font-size: 11pt;
}

.allpic {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.img1 {
  width: 600rpx;
  height: 600rpx;
}

.img2 {
  width: 292rpx;
  height: 292rpx;
  padding: 4rpx;
}

.img4 {
  width: 292rpx;
  height: 292rpx;
  padding: 4rpx;
  margin-bottom: -12rpx;
}

.img {
  width: 192rpx;
  height: 192rpx;
  padding: 4rpx;
  margin-bottom: -12rpx;
}
